{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "transient_prompt": {
      "template": "󰐣 ",
      "background": "transparent",
      "foreground": "darkGray",
      "newline": false
  },
  "secondary_prompt": {
      "background": "transparent",
      "foreground": "darkGray",
      "template": "󰐣 "
  },
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "properties": {
            "cache_duration": "none",
            "time_format": "15:04"
          },
          "template": "[{{.CurrentDate | date .Format}}] ",
          "foreground": "darkGray",
          "type": "time",
          "style": "plain"
        },
        {
          "properties": {
            "cache_duration": "none"
          },
          "template": "{{ .UserName }}",
          "foreground": "blue",
          "type": "session",
          "style": "plain"
        },
        {
          "properties": {
            "cache_duration": "none",
            "style": "folder"
          },
          "template": "{{ if ne .PWD \"~\" }}<darkGray>:</>{{ .Path }}{{ end }}",
          "foreground": "yellow",
          "type": "path",
          "style": "plain"
        },
        {
          "properties": {
            "branch_icon": "",
            "cache_duration": "none",
            "fetch_status": true
          },
          "template": " ({{ .HEAD }}{{ if gt (.Working.String | len) 0 }} {{ .Working }}{{ end }}{{ if gt (.Staging.String | len) 0}} {{ .Staging}}{{ end }})",
          "foreground": "green",
          "type": "git",
          "style": "plain"
        },
        {
          "properties": {
            "cache_duration": "none"
          },
          "template": " |",
          "foreground": "red",
          "type": "text",
          "style": "plain"
        }
      ]
    }
  ],
  "version": 3,
  "final_space": true
}
